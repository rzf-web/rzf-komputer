// header
.header
  .container
    .header__content
      ='\n'
      a.header__logo(href=dataHeader.logoLink)
        ='\n'
        img.header__logo__el(src='assets/img/logo/'+dataHeader.logoSrc, alt=dataHeader.logoAlt)/
        ='\n'
      ='\n'
      button.burger-menu.js-nav(type='button')
        each val in [1, 2, 3]
          ='\n'
          span.burger-menu__bar
        ='\n'
      .header__mobile.js-mobile-menu
        .header__menu
          ul.header__nav
            each val in dataHeader.menu
              li.header__nav__item.js-nav-items(class=(navActive == val.classActive ? 'header__nav__item--active' : ''))
                ='\n'
                a.header__nav__link(href=val.link) !{val.text}
      ='\n'
      button.search.js-button-search(type='button')
        ='\n'
        i.rzfkomputer-search
        ='\n'
      ='\n'
      button.cart.js-cart(type='button')
        ='\n'
        span.cart__count 1
        i.rzfkomputer-cart
        ='\n'
      ='\n'
      .cart-list.js-cart-list(dataEmpty='1')
        .cart-list__items.js-cart-list__items
          .cart-list__alert-empty
            .cart-list__alert-empty-img
              ='\n'
              img.cart-list__alert-empty-img-el(src='assets/img/dummy/empty-cart.svg' alt='Saat ini, Keranjang Anda kosong')/
              ='\n'
            .cart-list__alert-empty-txt
              p Saat ini, Keranjang Anda kosong
          .cart-list__table__wrapper
            table.cart-list__table
              tbody
                each val in dataTable.list
                  tr.cart-list__row
                    td.cart-list__img-wrapper
                      ='\n'
                      img.cart-list__img-el(src='assets/img/dummy/'+val.img alt=val.title)/
                    td.cart-list__product
                      h6.cart-list__product-name !{val.name}
                      p.cart-list__product-price !{val.price}
                      p.cart-list__product-count Total : !{val.count}
                    td.cart-list__delete
                      ='\n'
                      button.cart-list__delete-btn.js-cart-list-delete(type='submit')
                        ='\n'
                        i.rzfkomputer-trashcan
                        ='\n'
                      ='\n'
            .cart-list__total
              ='\n'
              span.cart-list__total-name Total:
              h5.cart-list__total-price Rp. 4.500.000
              .cart-list__button
                .cart-list__button--row
                  ='\n'
                  a.btn.btn--primary.btn--views(href='keranjang-belanja.html') Lihat Keranjang
    .header__search-section
      .header__search-section__form-wrapper
        form.header-search-section__form.js-search-form(action='#' method='POST' autocomplete='off')
          ='\n'
          button.header-search-section__submit(type='submit')
            ='\n' 
            i.rzfkomputer-search
            ='\n'
          ='\n'
          input.header-search__input.js-search-input(type='text' name='search' id='search' placeholder='Cari Produk' autofocus)/
          ='\n'
          button.header-search-section__close.js-header-search-section__close(type='button')
            ='\n'
            i.rzfkomputer-clear
            ='\n'
        .header__search-section__result.js-search-result
          .header__search-section__result-notif.js-notif-show
            .header__search-section__result-img-wrapper
              ='\n'
              img(src='assets/img/dummy/not-found.svg')
              p Maaf, produk yang Anda cari tidak tersedia
          h3.header__search-section-title.show Produk Pilihan
          ul.header__search-section__list.js-search-popup-input
            li.header__search-section__item
              ='\n'
              a.header__search-section__link(href='#') Asus Ryzen AMD 3
            li.header__search-section__item
              ='\n'
              a.header__search-section__link(href='#') Printer Thermal
            li.header__search-section__item
              ='\n'
              a.header__search-section__link(href='#') TP-Link
    .overlay
='\n'
