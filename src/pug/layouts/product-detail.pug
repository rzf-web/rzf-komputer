        //product-detail-form
        .pdetail__form
          form(action='keranjang-belanja.html' method='get' autocomplete='off')
            h3.pdetail__form__name Asus Ryzen 3 AMD
            .pdetail__form__summary Cocok untuk Anda yang suka bermain komputer
            .pdetail__form__count-wrapper
              h3.pdetail__form__price Harga :
              p.js-price Rp 4.500.000-,
              h3.pdetail__form__category Kategori :
              p Komputer
              h3.pdetail__form__inventory Stok : 
              p 15
              h3.pdetail__form__count Jumlah :
              button.pdetail__form__min(type='button' class='btnMin')
                ='\n'
                i.rzfkomputer-minus
              input.pdetail__form__quantity.js-input-qty(type='number' value='1' min='1' name='qty')/
              button.pdetail__form__max(type='button' class='btnMax')
                ='\n'
                i.rzfkomputer-add
            .pdetail__form__row
              //- button.btn.btn--primary.btn--cart(type='button')
              //-   ='\n'
              //-   i.rzfkomputer-cart
              //-   | Masukkan Keranjang
              a.btn.btn--primary.btn--cart(href='keranjang-belanja.html')
                ='\n'
                i.rzfkomputer-cart
                | Masukkan Keranjang

