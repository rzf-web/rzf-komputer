//-------------------------------------------------------------------------------
  @name: Admin Login Page
  -------------------------------------------------------------------------------//

// login-wallpaper
.login-bg
='\n'
// login-container
.login-container
  .login-wrapper
    .login-form
      ='\n'
      a.logo-brand(href='index.html')
        ='\n'
        img(src='assets/img/logo/login-logo.svg')/
        ='\n'
      .login-head
        h1.login-title
          | Welcome
        p.login-description
          | Login to access your 
          br
          |  Content Management System account
        ='\n'
      ='\n'
      // login-form
      ='\n'
      form(action='#' method='post')
        .invalid-feedback-error
          p Authentication that you've entered is incorrect!
        .login-input
          ='\n'
          label.input-label Username
          ='\n'
          input.form-control.input-block(name='username' type='text' placeholder='Enter here' autofocus='on' autocomplete='off')/
          .invalid-feedback
            p Username is required!
          ='\n'
        .login-input
          ='\n'
          label.input-label Password
          ='\n' 
          input.form-control.input-block(name='password' type='password' autofocus='on' placeholder='Enter here')/
          .invalid-feedback
            p Password is required!
        .login-input.mt-4
          ='\n'
          button.login-button.btn-block.btn-success(type='submit')
            | Login
          ='\n'
='\n'
//end-login